<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="id_office365_manual_synchronisation_form" model="ir.ui.view">
            <field name="name">Office365 Manual Synchronisation</field>
            <field name="model">office365.manual.synchronisation</field>
            <field name="arch" type="xml">
                <form string="Sync">
                     <group col='2'>
                        <field name="instance_id" widget="selection" 
						required='1' string="Instance Id"/>
                    </group>
                    <footer>
                        <button name="start_action_office365_synchronization"
                                string="Export Now"
                                type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class='oe_link' special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>
